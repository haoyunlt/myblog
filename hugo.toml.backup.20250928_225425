# Markdown和代码高亮配置
[markup]
  # 代码高亮配置
  [markup.highlight]
    # 使用GitHub风格的代码高亮
    style = "github"
    # 不显示行号
    lineNos = false
    # 行号显示在表格中
    lineNumbersInTable = false
    # 不使用内联CSS类
    noClasses = false
    # 启用代码围栏
    codeFences = true
    # 高亮特定行
    hl_Lines = ""
    # 启用锚点链接
    anchorLineNos = false
    # 行号起始值
    lineNoStart = 1
    # 制表符宽度
    tabWidth = 4
    # 启用猜测语言
    guessSyntax = true
  
  # Goldmark配置（Hugo的默认Markdown处理器）
  [markup.goldmark]
    [markup.goldmark.renderer]
      # 允许原始HTML（用于Mermaid等）
      unsafe = true
      # 启用硬换行
      hardWraps = false
      # 启用XHTML
      xhtml = false
    [markup.goldmark.parser]
      # 启用自动标题ID
      autoHeadingID = true
      # 启用自动标题锚点
      autoHeadingIDType = "github"
      # 启用属性
      attribute = true
    [markup.goldmark.extensions]
      # 启用定义列表
      definitionList = true
      # 启用脚注
      footnote = true
      # 启用链接属性
      linkify = true
      # 启用删除线
      strikethrough = true
      # 启用表格
      table = true
      # 启用任务列表
      taskList = true
      # 启用排版增强
      typographer = true
  
  # 表格配置
  [markup.tableOfContents]
    endLevel = 3
    ordered = false
    startLevel = 2

